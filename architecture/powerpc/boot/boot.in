arch_boot_cd_pre()
{
	# before r45543 vintage yaboot glue was here
	grubdir="$(sed -n "/lib.*mod$/ {s,grub2: \(.*\)/[^/]*,\1,p ; q}" \
		$build_root/var/adm/flists/grub2)"
	grubarch="${grubdir##*/}"
	mkdir -p $isofsdir/{boot,etc,ppc}/

	cp -v $base/architecture/powerpc/boot/{ofboot.b,boot.msg} $isofsdir/boot/
	cp -v $base/architecture/powerpc/boot/bootinfo.txt $isofsdir/ppc/

        echo "configfile (ieee1275/cd,msdos1)/boot/grub.cfg" > $isofsdir.grub
	grub-mkimage -O powerpc-ieee1275 -p $isofsdir -o $isofsdir/boot/grub.elf \
		-c $isofsdir.grub -d $build_root/$grubdir/ \
		part_gpt part_msdos ntfs ntfscomp hfsplus fat ext2 iso9660 \
		boot configfile linux btrfs all_video reiserfs xfs jfs lvm \
		normal crypto cryptodisk luks part_apple suspend sleep reboot \
		search_fs_file search_label search_fs_uuid hfs
	rm $isofsdir.grub

	# rs6k b50, but may not work, yet:
	cp $isofsdir/{boot/grub.elf,install.bin}

	cat > $isofsdir/boot/grub.cfg <<EOT
set timeout=8
#set default=gnulinux
EOT
}

arch_boot_cd_add()
{
	# unused $3, verbose name
	cat >> $isofsdir/boot/grub.cfg <<EOT

menuentry "$3 ($2)" {
	set root=(ieee1275/cd,msdos1)
	linux $4
	initrd $5
}
EOT
}

arch_boot_cd_post()
{
	echo_status "Creating isofs_arch.txt file .."

	cat > $build_toolchain/isofs_arch.txt <<- EOT
BOOT    -hfs -part -map $base/architecture/powerpc/boot/mapping -no-desktop
BOOTx   -hfs-bless $isofsdir/boot -hfs-volid T2
BOOTx   -sysid PPC -l -L -r -T -chrp-boot --prep-boot boot/grub.elf
DISK1   $isofsdir/ /
EOT
}
