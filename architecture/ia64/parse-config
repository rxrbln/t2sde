# g++ LTO often breaks complex c++ code, e.g. qt/kde, only use for C
if [ "$SDECFG_LTO" = 1 ]; then
	var_append CC_WRAPPER_APPEND ' ' -ffat-lto-objects
	var_append CXX_WRAPPER_APPEND ' ' '-fno-whole-program -fno-lto'
fi
