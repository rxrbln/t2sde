arch_boot_cd_pre()
{
	local platform=ia64-efi
	local exe=bootia64.efi
	mkdir -p $isofsdir/boot/grub
	cp -af $build_root/usr/lib*/grub/* $isofsdir/boot/grub/
	rm -f $isofsdir/boot/grub/*/*.{module,img} # not needed in the image

set -x
	mkdir -p $isofsdir/efi/boot/
	grub-mkimage -O $platform -p "/boot/grub" \
	             -d $build_root/usr/lib*/grub/$platform \
	             -o $isofsdir/efi/boot/$exe \
	             --compression auto iso9660 fat part_msdos part_gpt
set +x

	dd if=/dev/zero bs=1024 count=1440 of=$isofsdir/efi.img
	mkfs.vfat $isofsdir/efi.img
	mmd -i $isofsdir/efi.img ::/EFI
	mmd -i $isofsdir/efi.img ::/EFI/BOOT
	mcopy -i $isofsdir/efi.img $isofsdir/efi/boot/$exe ::/EFI/BOOT

	# header
	sed -n '/CUT/q;p' $base/architecture/ia64/boot/grub.cfg \
		> $1/boot/grub/grub.cfg
}

arch_boot_cd_add()
{
	cat >> $1/boot/grub/grub.cfg <<-EOT

menuentry "$3 ($2)" {
        linux $4
        initrd $5
}
EOT
}

arch_boot_cd_post()
{
	# footer
	sed '1,/CUT/d' $base/architecture/x86/boot/grub.cfg \
		>> $1/boot/grub/grub.cfg
	echo_status "Creating isofs_arch.txt file .."

	echo "DISK1	$isofsdir/ /" > $build_toolchain/isofs_arch.txt

	cat >> $build_toolchain/isofs_arch.txt <<- EOT
BOOTx	-eltorito-alt-boot -no-emul-boot -partition_offset 16
BOOTx	-append_partition 2 0xef $isofsdir/efi.img
BOOTx	-e --interval:appended_partition_2:all::
BOOTx	-iso_mbr_part_type 0x83
EOT
}
