
arch_boot_cd_pre()
{
	mkdir $build_root/boot
	cp $build_root/boot/second.b $isofsdir/boot/second.b
        cp $build_root/archivista/sparc/boot/{silo.conf,boot.msg} \
	   $isofsdir/boot/
}

arch_boot_cd_add()
{
	# unused $2, verbose name
	cat >> $isofsdir/boot/silo.conf <<-EOT

image=$4
    label=$3
    initrd=$5
    ramdisk=8388608

EOT
}

arch_boot_cd_post()
{
	echo_status "Creating isofs_arch.txt file .."

	cat > $build_toolchain/isofs_arch.txt <<- EOT
BOOT    -G $isofsdir/boot/isofs.b -B ...
DISK1   $isofsdir/boot/ boot/
EOT
}

