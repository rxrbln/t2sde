
# some packages do not include an up-to-date config.{sub,guess}

x86_64_config_check ()
{
	# serch (recursively) for out-of-date files without x86_64 ...
	find -name config.sub -o -name config.guess | while read file ; do
	  if ! grep -q x86_64 $file && grep -q Autoconf $file ; then
		echo "No x86_64 found in $file - updated."
		cp -fv $root/usr/share/automake/${file/*\/} $file
	  fi
	done
}

hook_add preconf 5 "x86_64_config_check"

