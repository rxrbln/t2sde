
# some packages do not include an up-to-date config.{sub,guess}

x86_64_config_check ()
{
	if [ -f config.sub -o -f config.guess ] ; then
	  if ! grep -q x86_64 config.sub || ! grep -q x86_64 config.guess
	  then
		echo "No x86_64 found in config.{sub.guess} - updated."
		cp -fv $root/usr/share/automake/config.{guess,sub} .
	  fi
	fi
}

hook_add preconf 5 "x86_64_config_check"

