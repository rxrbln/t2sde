#Description: x86-64 (AMD64, Intel EM64T)

choice SDECFG_X8664_OPT generic \
	generic		"No special optimisation"		\
	k8		"Optimised for generic AMD K8 / Opteron"	\
	k8-sse3		"Optimised for AMD K8 with SSE3"	\
	amdfam10	"Optimised for AMD Family 10h"		\
	bdver1		"Optimised for AMD Family 15h (Bulldozer)"	\
	bdver2		"Optimised for AMD Family 15h (Piledriver, FMA)"	\
	bdver3		"Optimised for AMD Family 15h (Steamroller, FMA)"	\
	bdver4		"Optimised for AMD Family 15h (Excavator, AVX2)"	\
	btver1		"Optimised for AMD Family 14h (Bobcat)"	\
	btver2		"Optimised for AMD Family 16h (Jaguar, AVX)"	\
	znver1		"Optimised for AMD Family 17h (Ryzen, AVX2)"		\
	nocona		"Optimised for Intel EM64T (Pentium 4, Xeon)"	\
	core2		"Optimised for Intel Core2"		\
	nehalem		"Optimised for Intel Core-i 1-gen (Nehalem)"	\
	westmere	"Optimised for Intel Core-i 1-gen (Westmere)"	\
	sandybridge	"Optimised for Intel Core-i 2-gen (Sandybridge)"	\
	ivybridge	"Optimised for Intel Core-i 3-gen (Ivybridge)"	\
	haswell		"Optimised for Intel Core-i 4-gen (Haswell)"	\
	broadwell	"Optimised for Intel Core-i 5-gen (Broadwell)"	\
	skylake		"Optimised for Intel Core-i 6-gen (Skylake)"	\
	atom		"Optimised for Intel Atom" \
	bonnell		"Optimised for Intel Atom Bonnel"	\
	silvermont	"Optimised for Intel Atom Silvermont"


bool 'Default to 32-bit (X32) for the user-space applications' SDECFG_X8664_X32 0

if [ $SDECFG_X8664_OPT != generic ] ; then
	SDECFG_ID="$SDECFG_ID-$SDECFG_X8664_OPT"
fi

SDECFGSET_MULTILIB=1

if [ "$SDECFG_X8664_X32" = 1 ]; then
	SDECFG_ID="$SDECFG_ID-x32"
	const SDECFG_MULTILIBLIST "mx32,m32"
	SDECFGSET_MULTILIBLIST="mx32,m32"
fi

. architecture/x86/boot-config.in
