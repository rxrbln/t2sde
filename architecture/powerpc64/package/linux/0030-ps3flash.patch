+struct ps3nflash_private {
+	spinlock_t lock;		/* Request queue spinlock */
+	unsigned int blocking_factor;
+	struct request *req;
+	u64 raw_capacity;
+	struct gendisk *gendisk[PS3NFLASH_MAX_NUM_REGS];
+	struct request_queue *queue[PS3NFLASH_MAX_NUM_REGS];
+	int next_queue;
+};
