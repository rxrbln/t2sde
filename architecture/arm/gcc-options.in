[ "$SDECFG_ARM_OPT" != generic ] &&
	var_append GCC_WRAPPER_INSERT " " "-mcpu=$SDECFG_ARM_OPT"

# even gcc 4.2.1 has no config code to default to big-endian, -ReneR

[ "$SDECFG_ARM_ENDIANESS" = "eb" ] &&
	var_append GCC_WRAPPER_INSERT " " "-mbig-endian"

[ "$SDECFG_ARM_THUMB" = 1 ] &&
	var_append GCC_WRAPPER_INSERT " " "-mthumb -mthumb-interwork -D__arm__"

[ "$SDECFG_ARM_SOFTFLOAT" = 1 ] &&
	var_append GCC_WRAPPER_INSERT " " "-msoft-float"
