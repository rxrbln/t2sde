arch_boot_cd_pre()
{
	mkdir -p $isofsdir/boot
	cp -f $build_root/boot/arcload $isofsdir/boot/sash64
	cp -f $build_root/boot/arcload.ecoff $isofsdir/boot/sashARCS
	cp -f $base/architecture/mips64/boot/arc.cf $isofsdir/boot/
}

arch_boot_cd_add()
{
	cat >> $isofsdir/boot/arc.cf <<EOT

install {
	description	"$3";
	image	system	"install";
}
EOT

#$2 {
	#image system	"$4";
	#initrd system	"$5";
	#append		"verbose";
}

arch_boot_cd_post()
{
	echo_status "Creating isofs_arch.txt file .."

	cat > $build_toolchain/isofs_arch.txt <<- EOT
BOOT    -mips-boot /boot/sashARCS -mips-boot /boot/sash64 -mips-boot /boot/arc.cf
BOOTX   -mips-boot /boot/install
DISK1   $isofsdir/ /
EOT
}
