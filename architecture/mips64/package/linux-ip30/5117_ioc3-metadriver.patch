+
+
+
+/* ----------------------------------------------------------------------- */
+/* Module management */
+
+static int __init
+ioc3_init(void)
+{
+	return pci_register_driver(&ioc3_driver);
+}
+
+static void __exit
+ioc3_exit(void)
+{
+	pci_unregister_driver(&ioc3_driver);
+}
