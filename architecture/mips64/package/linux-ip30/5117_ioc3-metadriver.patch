+	.probe = serial8250_ioc3_probe,
+	.remove = serial8250_ioc3_remove,
+	.irq_mask = SIO_IR_SA_INT | SIO_IR_SB_INT,
+	.reset_mask = 1,
+	.owner = THIS_MODULE,
+};
+
+ioc3_submodule_driver(ioc3uart_submodule);
