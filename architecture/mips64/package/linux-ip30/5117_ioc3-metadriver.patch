+	{0,},
+};
+MODULE_DEVICE_TABLE(pci, ioc3_id_table);
+
+static struct
+pci_driver ioc3_driver = {
+	.name = "IOC3",
+	.id_table = ioc3_id_table,
+	.probe = ioc3_probe,
+	.remove = ioc3_remove,
+};
