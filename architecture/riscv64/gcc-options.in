case "$SDECFG_RISCV64_OPT" in
rva22)
	# RVA22 should include zbs, but P550 does not have it
	var_append GCC_WRAPPER_INSERT ' ' -march=rv64g_zicntr_zihintpause_zba_zbb #_zbs
	var_append KCC_WRAPPER_APPEND ' ' -march=rv64g_zicntr_zihintpause_zba_zbb #_zbs
	;;
rva23)
	var_append GCC_WRAPPER_INSERT ' ' -march=rv64gv_zicntr_zihintpause_zba_zbb_zbs
	var_append KCC_WRAPPER_APPEND ' ' -march=rv64gv_zicntr_zihintpause_zba_zbb_zbs
	;;
*)
	var_append GCC_WRAPPER_INSERT ' ' -march=rv64g
	var_append KCC_WRAPPER_APPEND ' ' -march=rv64g
	;;
esac
