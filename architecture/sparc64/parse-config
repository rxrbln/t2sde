alter_arch()
{
	echo_status "Altering arch_{machine,target} to sparc ..."
	# tweak target and other defines
	arch_machine=${arch_machine/64/}
	arch_target=${arch_target/64/}
	[ "$stagelevel" -gt 1 ] && arch_build=${arch_build/64/}

	# let the libdir and configure options regenerate
	set_confopt
}

if [ "$SDECFG_SPARC64_32BIT" = 1 ]; then
  case $pkg in
	gcc)
		echo_status "Patching package to default to -m32 ..."
		var_append patchfiles ' ' \
		           "$base/architecture/$arch/pkg_gcc-m32-default.diff"
		;;
	linux2*|glibc)
		: ;;
	*)
		alter_arch
		;;
  esac
fi

