case "$SDECFG_X86_OPT" in
    generic) ;;
    via-c3)
	var_append GCC3_WRAPPER_INSERT " " "-march=k62" ;;
    via-c3-improved)
	#var_append GCC3_WRAPPER_INSERT " " "-s -O3 -march=i686 -fomit-frame-pointer -falign-functions=4 -funroll-loops -fexpensive-optimizations -malign-double -fschedule-insns2" ;;
	var_append GCC3_WRAPPER_INSERT " " "-march=i686" ;;
    via-c3-2)
	var_append GCC3_WRAPPER_INSERT " " "-march=pentium-mmx" ;;
    k6*)
	var_append GCC3_WRAPPER_INSERT " " "-march=$SDECFG_X86_OPT"
	# workaround and should be removed when gcc 3.x got fixed ...
	var_append GCC3_WRAPPER_INSERT " " "-fno-branch-count-reg"
	;;
    *)
	var_append GCC3_WRAPPER_INSERT " " "-march=$SDECFG_X86_OPT" ;;
esac

case "$SDECFG_X86_OPT" in
    i386|i486)
	var_append GCC2_WRAPPER_INSERT " " "-march=$SDECFG_X86_OPT" ;;
    
    pentium|pentium-mmx)
	var_append GCC2_WRAPPER_INSERT " " "-march=pentium" ;;
    
    pentium*|via-c3-2)
	var_append GCC2_WRAPPER_INSERT " " "-march=pentiumpro" ;;

    k6*|athlon*|via-c3)
	var_append GCC2_WRAPPER_INSERT " " "-march=k6" ;;
    via-c3-improved)
 	var_append GCC2_WRAPPER_INSERT " " "-march=i686" ;;
esac

# workaround for gcc bug #15617
[ "$SDECFG_X86_OPT" == 'pentium4' ] && var_append GCC3_WRAPPER_INSERT " " "-mpreferred-stack-boundary=7"
