install_desktop() {
	local file="$1" regdir=usr/share/rock-registry/app

	echo "Installing ${file##*/} ..."
	mkdir -p $root/$regdir
	rock_substitute $file > $root/$regdir/${file##*/}
}

for y in $( ls -1 $confdir/*.desktop 2> /dev/null ); do
	hook_add postinstall 6 "install_desktop '$y'"
done
