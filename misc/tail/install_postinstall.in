install_postinstall() {
	local trg="${1##*/}"
	rock_substitute $1  > $root/etc/postinstall.d/${trg%.postinstall}
	chmod +x $root/etc/postinstall.d/${trg%.postinstall}
}

for x in $confdir/*.postinstall; do
	if [ -f $x ]; then
		hook_add postinstall 4 "install_postinstall $x"
	fi
done
