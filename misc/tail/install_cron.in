for x in $confdir/*.cron; do
	if [ -f $x ]; then

		# TODO: somehow determine if it wants cron.daily or another level //mnemoc

		y=${x##*/}
		hook_add postdoc 3 "rock_substitute $x > \$root/etc/cron.daily/${y%.cron}; \
			 chmod +x \$root/etc/cron.daily/${y%.cron}"
	fi
done
