auto_install_cron() {
	# TODO: somehow determine if it wants cron.daily or another level //mnemoc
	local crontpl= crondir=$root/etc/cron.daily
	for crontpl in $( cd $confdir; ls -1 *.cron 2> /dev/null ); do
		echo "Installing ${crontpl%.cron} into ${crondir#$root}..."
		rock_substitute $confdir/$crontpl > $crondir/${crontpl%.cron}
		chmod +x $crondir/${crontpl%.cron}
	done
}

hook_add postinstall 3 'auto_install_cron'
