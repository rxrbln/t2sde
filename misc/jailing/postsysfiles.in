# Add library paths to ld.so.conf for jailed packages
#
if [ "${ROCKCFG_JAILING}" = 1 ]
then
	templist=`mktemp`
	for x in `grep '^X .* JAIL ' $base/config/$config/packages \
						| cut -d' ' -f5`; do
		if eval "[ \"\${ROCKCFG_JAILING_$x}\" = 1 ]" ; then
			if eval "[ ! \"\${ROCKCFG_JAILDIR_$x}\"  ]" ; then
				eval "export \${ROCKCFG_JAILDIR_$x}=\
					\"${ROCKCFG_BASEJAIL}/$x\""
			fi
			eval "echo $root/\"\${ROCKCFG_JAILDIR_$x}\"/usr/lib \
						>> $templist"
		fi
	done
	for x in `sort -u $templist | grep -vxf $root/etc/ld.so.conf`; do
		echo $x >> $root/etc/ld.so.conf
	done
	ldconfig
	rm $templist
	unset x templist
fi


