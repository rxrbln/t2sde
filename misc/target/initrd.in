# extend_initrd initrd-filename from-dir
# adds additional content to an existing initrd (cpio image)
extend_initrd()
{
	initrd=$1
	from=$2

	echo "Initrd: $initrd, from: $from"
	echo "Extending initrd archive ..."

	# real extraction might save a few bytes due to removal of duplicate
	# files ...
	#
	gunzip < $initrd > $initrd.cpio
	( cd $from
	  find * | cpio -o -H newc --append --file $initrd.cpio
	)
	gzip -c -9 $initrd.cpio > $initrd
	rm $initrd.cpio
}
