if pkgcheck nullmailer && pkgcheck sendmail
then
	menu_begin MENU_PKG_NULLMAILER 'Nullmailer Options'
	bool 'Build and use Nullmailer instead of sendmail' \
		ROCKCFG_PKG_NULLMAILER_USEIT 0

	if [ "$ROCKCFG_PKG_NULLMAILER_USEIT" != 1 ] ; then
		pkgremove nullmailer
	else
		pkgremove sendmail
		bool 'Send all local mail to a local mbox' \
			ROCKCFG_PKG_NULLMAILER_LOCALQUEUE 0
	fi
	menu_end
fi

