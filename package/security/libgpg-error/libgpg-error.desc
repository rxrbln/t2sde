if atstage cross; then
	var_remove_regex confopt ' ' '--host=.*'
	# their configure, Makefile code does not cope with any triplet, ...
	x="${arch_target/-t2-/-unknown-}"
	x="${x/sparcv*-unknown-/sparc-unknown-}"
	x="${x/-uclibc/-gnu}"
	var_append confopt ' ' --host=$x
fi

