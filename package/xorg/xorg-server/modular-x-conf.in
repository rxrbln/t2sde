if [ $prefix_auto = 1 ] ; then
	prefix="usr/X11R7"
	set_confopt
fi

# generating those for any font will produce shared files - those are
# generated at post-instal time -ReneR
var_append makeinstopt " " "MKFONTDIR=/bin/true MKFONTSCALE=/bin/true FCCACHE=/bin/true"

# needed due to inconsistent app-defaults dir handling 
var_append INSTALL_WRAPPER_FILTER "|" "sed -e 's,usr/X11/lib/X11/app-defaults,etc/X11/app-defaults,'"
var_append INSTALL_WRAPPER_FILTER "|" "sed -e 's,$prefix/lib/X11/app-defaults,etc/X11/app-defaults,'"
var_append INSTALL_WRAPPER_FILTER "|" "sed -e 's,usr/X11/lib/app-defaults,etc/X11/app-defaults,'"
var_append INSTALL_WRAPPER_FILTER "|" "sed -e 's,$prefix/lib/app-defaults,etc/X11/app-defaults,'"
