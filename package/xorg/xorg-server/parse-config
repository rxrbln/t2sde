if atstage cross; then
  xorg_cache() {
	if [ -f $root/var/adm/packages/libx11 -a -e config.cache ]; then
		local xincdir=`pkgprefix includedir libx11`
		local xlibdir=`pkgprefix libdir libx11`
		cat >> config.cache <<-EOT
ac_cv_have_x=\${ac_cv_have_x='have_x=yes ac_x_includes=$xincdir ac_x_libraries=$xlibdir'}
EOT
	fi
  }
  hook_add preconf 8 'xorg_cache'
fi

# slash-hammer for now ... - generic fixing because our time is precious ,-) We
# can relax waiting for upstream to fix and remove those in, let's say one year
if pkgprefix -t libx11 2>/dev/null ; then
	var_append CPP_WRAPPER_APPEND ' ' '*/X11R6/include?-I'"`pkgprefix includedir libx11`"
	var_append GCC_WRAPPER_APPEND ' ' '*/X11R6/include?-I'"`pkgprefix includedir libx11`"
	var_append GCC_WRAPPER_APPEND ' ' '*/X11R6/lib?-L'"`pkgprefix libdir libx11`"
	var_append GCC_WRAPPER_APPEND ' ' '*/X11R6/lib64?-L'"`pkgprefix libdir libx11`"
fi
