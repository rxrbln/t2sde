+static int
+GetPowerOfTwo(int w)
+{
+    int Pof2 = 0;
+    int i = 12;
+
+    while(--i) {
+        if(w & (1 << i)) {
+            Pof2 = i;
+            if(w & ((1 << i) - 1))
+                Pof2++;
+            break;
+        }
+    }
+    return Pof2;
+}
