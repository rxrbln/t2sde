+
+void mgaSetupForPlanarScreenToScreenColorExpandFill( ScrnInfoPtr pScrn,
+						     int fg, int bg,
+						     int rop,
+						     unsigned int planemask )
+{
+    MGAPtr pMga = MGAPTR(pScrn);
+    CARD32 mgaCMD = pMga->AtypeNoBLK[rop] | MGADWG_BITBLT |
+				MGADWG_SGNZERO | MGADWG_BPLAN;
