+#define DRAW_POINT(x, y) { \
+	tmp = x; \
+	OUTREG(MGAREG_FXBNDRY, (tmp) | (((tmp) + 1) << 16)); \
+	OUTREG(MGAREG_YDSTLEN + MGAREG_EXEC, ((y) << 16) | 1); \
+}
