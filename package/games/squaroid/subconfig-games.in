if pkgcheck squaroid X ; then
      menu_begin MENU_PKG_GAMES_SQUAROID 'Squaroid'
        bool 'sound support' ROCKCFG_PKG_SQUAROID_SOUND 1 "
          enable sfx effects"
        text 'sound device' ROCKCFG_PKG_SQUAROID_SNDDEV '/dev/sound/dsp' "
          device for sound output"
        text 'default irc server' ROCKCFG_PKG_SQUAROID_IRCSERV 'games.squaroid.de' "
          the default irc server"
        if pkgcheck mysql X ; then
          bool 'mySQL support' ROCKCFG_PKG_SQUAROID_MYSQL 0 "
            Include MySQL support"
        fi
      menu_end
fi
