Some packges have outdated libtool that e.g. does not handle lib64. The
LIBTOOL-QUIRK flag allows automated updating of those files.

if [ "$desc_F" != "${desc_F/LIBTOOL-QUIRK}" ]; then
	if [ $stagelevel -le 1 ]; then
		hook_add preconf 5 \
		"cp $base/build/$SDECFG_ID/TOOLCHAIN/tools.cross/{bin/libtool,share/libtool/ltmain.sh} ."
	else
		hook_add preconf 5 \
		"cp -vf $root/usr/{bin/libtool,share/libtool/ltmain.sh} ."
	fi
fi
