+#endif
 
 	if (ioctl( fd, KIOCSRATE, &kbdrate_s )) {
 		perror( "ioctl(KIOCSRATE)" );
@@ -177,7 +186,11 @@
 
 	if (!silent)
 		printf( "Typematic Rate set to %d cps (delay = %d ms)\n",
+#ifdef __sparc__
+			kbdrate_s.rate, kbdrate_s.delay * 1000 / HZ );
+#else
 			kbdrate_s.period, kbdrate_s.delay * 1000 / HZ );
+#endif
 
 	return 1;
 #else /* no KIOCSRATE */
