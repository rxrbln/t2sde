if pkgcheck busybox X
then
	menu_begin MENU_PKG_BUSYBOX 'Busybox Package Options'
		bool 'Create Busybox Emergency (static) toolkit' \
						ROCKCFG_PKG_BUSYBOX_ET 0
		if [ "$ROCKCFG_PKG_BUSYBOX_ET" = 1 ] ; then
			block_begin 5
			text 'Emergency toolkit directory' \
				ROCKCFG_PKG_BUSYBOX_ET_DIR '/emergency'
			block_end
		fi
		bool 'Create Busybox symlinks' ROCKCFG_PKG_BUSYBOX_SYMLINKS 0
	menu_end
fi

