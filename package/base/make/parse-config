
# add -j to the makeopt - if the package is not flagged to be broken for
# parallel builds ...
if [ "$desc_F" = "${desc_F/NOPARALLEL}"  -a "$ROCKCFG_PARALLEL_MAX" ] ; then
  [ $ROCKCFG_PARALLEL_MAX -gt 1 ] &&
	echo_status "Parallel build using $ROCKCFG_PARALLEL_MAX jobs enabled." &&
	var_insert makeopt " " "-j$ROCKCFG_PARALLEL_MAX"
fi

