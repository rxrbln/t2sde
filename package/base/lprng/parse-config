
install_setprinter() {
	sed "s,@printer@,$1,g" > /usr/sbin/setprinter_$1 \
		< $base/package/base/lprng/setprinter.sh
	chmod +x /usr/sbin/setprinter_$1

	if [ "$ROCKCFG_DEFAULT_PRINTER" = "$1" ] ; then
		/usr/sbin/setprinter_$1
	fi
}

if [ "$ROCKCFG_DEFAULT_PRINTER" != "$pkg" ] ; then
	register_badfiles 'Only default printer may own this file' \
		usr/bin/{cancel,lp,lpq,lpr,lprm,lpstat} usr/sbin/lpc
fi

