gcc_build_wrapper() {
	local x="$1" y z ; shift
	for y ; do
		local ver=`$y -dumpversion 2> /dev/null`
		[ $? != 0 ] && continue

		case "$ver" in
			2.*) z="$x,GCC,GCC2" ;;
			3.*) z="$x,GCC,GCC3" ;;
			*)   continue ;;
		esac

		if [ $x = KCC ] ; then
			build_wrapper $x $y
		else
			build_wrapper $z $y
		fi
	done
}

gcc_build_wrapper CC ${arch_target}-gcc{-2,-3,}
gcc_build_wrapper KCC ${arch_target}-kcc{-2,-3,}

if [ $stagelevel -gt 1 -o "$ROCKCFG_USE_CROSSCC" = 0 ] ; then
	gcc_build_wrapper CC  cc gcc{-2,-3,}
	gcc_build_wrapper CXX {c,g}++{-2,-3,}
	gcc_build_wrapper F77 {g,f}77{-2,-3,}
	gcc_build_wrapper KCC kcc{-2,-3,}
fi

