   /* Substitute values in opts, if required */
   opts = usersubst(opts);
 
+  /* make the node a nice absolute path name */
+  if (node[0] && node[0]!='/') {
+    char *thisdir=get_current_dir_name();
+    char *oldnode=node;
+    if (chdir(node) == 0) {
+      /* we will never free this variable ... */
+      node=get_current_dir_name();
+      chdir(thisdir);
