
if atstage cross; then
	# echo_status "pkg-config: Enabling PKG_CONFIG_DEBUG_SPEW"
	#export PKG_CONFIG_DEBUG_SPEW=yes
        SYSROOT=$base/build/$SDECFG_ID
        #echo_status "pkg-config: old PKG_CONFIG_PATH='$PKG_CONFIG_PATH'"
        export PKG_CONFIG_PATH=$SYSROOT/usr/lib/pkgconfig
        #echo_status "pkg-config: new PKG_CONFIG_PATH='$PKG_CONFIG_PATH'"
        #echo_status "pkg-config: old PKG_CONFIG_LIBDIR='$PKG_CONFIG_LIBDIR'"
        export PKG_CONFIG_LIBDIR=$SYSROOT/lib:$SYSROOT/usr/lib
	#echo_status "pkg-config: new PKG_CONFIG_LIBDIR='$PKG_CONFIG_LIBDIR'"
	unset SYSROOT
#else
#	echo_status "pkg-config: keeping PKG_CONFIG_PATH='$PKG_CONFIG_PATH'"
#	echo_status "pkg-config: keeping PKG_CONFIG_LIBDIR='$PKG_CONFIG_LIBDIR'"
fi
