if atstage cross; then
	#export PKG_CONFIG_DEBUG_SPEW=yes
	SYSROOT=$base/build/$SDECFG_ID

	export PKG_CONFIG_PATH="" # unused, see below
	for x in $SYSROOT{/usr,/opt}{,/*}/{share,lib?*,lib}/pkgconfig $HOME/lib{?*,}/pkgconfig ; do
		[ -d $x ] && var_append PKG_CONFIG_PATH ':' "$x"
	done
  
	export PKG_CONFIG_LIBDIR=$PKG_CONFIG_PATH # needed, otherwse system is used
	unset SYSROOT
fi
