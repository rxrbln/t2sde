# detect the right INIT
if [ $stagelevel -eq 9 ]; then
	# on stage 9 we detect default init

	# NOTE: how can this impact INIT_STYLE?	//mnemoc
	ROCKCFG_INIT=$( grep -l 'sbin/init$' $root/var/adm/flists/* | sed -e 's,.*/,,g' )
	echo_status "INFO: '$ROCKCFG_INIT' detected as INIT"
else
	# an old config will not have ROCKCFG_INIT set, and sysvinit is the default
	[ -z "$ROCKCFG_INIT" ] && ROCKCFG_INIT=sysvinit
fi
