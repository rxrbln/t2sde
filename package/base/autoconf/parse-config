# some packages do not include an up-to-date config.{sub,guess}

autoconf_check ()
{
	# search (recursively) for out-of-date files without x86_64, sparcv9b, ...
	find -name config.sub -o -name config.guess | while read file ; do
	  if ! grep -q "x86_64\|sparcv9b" $file && grep -q Autoconf $file ; then
		echo "Outdated $file (no x86_64, sparv9b, ...) - updated."
		cp -fv $root/usr/share/automake/${file/*\/} $file
	  fi
	done
}

hook_add preconf 5 "autoconf_check"

