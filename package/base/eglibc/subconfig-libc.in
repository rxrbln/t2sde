if pkgcheck eglibc X; then
    comment 'eGlibc (Embedded GNU C Library) Options'

    case $SDECFG_ARCH in
	mips|mips64) tls=0 ;;
	*) tls=1
    esac

    bool 'Enable TLS and NPTL' SDECFG_PKG_EGLIBC_TLS $tls
    bool 'Enable profile library' SDECFG_PKG_EGLIBC_ENABLE_PROFILE 0

    comment ' '
fi
