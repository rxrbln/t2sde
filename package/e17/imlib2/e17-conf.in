	if [ "$1" == "NO_SANITY_CHECK" ] ; then
		prefix=$SDECFG_PKG_E17_CORE_PREFIX
	else
		pkgprefix -t imlib2
		prefix=`pkgprefix imlib2`
	fi
	set_confopt
fi


# needed since e17 is currently CVS checkout only ...
