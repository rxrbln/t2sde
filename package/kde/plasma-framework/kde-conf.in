if [ "$prefix_auto" = 1 ]; then
	if [ "$1" == "NO_SANITY_CHECK" ]; then
		if [ "$SDECFG_PKG_KDE_CORE_PREFIX" ]; then
			prefix="$SDECFG_PKG_KDE_CORE_PREFIX"
		else
			prefix="opt/kde"
		fi
 	elif pkginstalled kde-extra-cmake-modules; then
		pkgprefix -t kde-extra-cmake-modules
		prefix=`pkgprefix kde-extra-cmake-modules`
	fi
  	set_confopt
fi

export ECM_DIR=/opt/kde/share/ECM/cmake

# make sure the right qt and kde libs are used
pkgprefix -t qt5
export PATH="$(pkgprefix bindir qt5):$PATH"
export LD_LIBRARY_PATH="$QTDIR/${libdir##*/}:/$prefix/${libdir##*/}:$LD_LIBRARY_PATH"


# KDE specific cmake options
var_append extraconfopt " " "-DCMAKE_INSTALL_PREFIX=/$prefix -DLIB_SUFFIX=${libdir##*/lib}"
var_append extraconfopt " " '-DCMAKE_BUILD_TYPE=Release'

#TODO, this needs to be fixed, hardcoded atm
var_append extraconfopt " " '-DDOCBOOKXML_CURRENTDTD_DIR=$root/usr/share/xml/docbook/docbook-xml-dtd-4.2'
var_append extraconfopt " " '-DDOCBOOKXSL_DIR=$root/usr/share/xml/docbook/docbook-xsl-1.75.2'

# some feature and optimization settings ...

if pkginstalled openldap; then
	pkgprefix -t openldap
	var_append confopt " " "--with-ldap=$root/$( pkgprefix openldap )"
fi
var_append confopt " " "--with-xinerama --enable-dnotify"

[ $arch = x86 ] && var_append confopt " " "--enable-fast-malloc=full"
[[ $libdir != *lib ]] && var_append confopt " " "--enable-libsuffix=${libdir##*/lib}"

kde_cmake() {
	if [ -f CMakeLists.txt ]; then
		mkdir objdir; cd objdir
		var_remove_regex confopt ' ' '--.*'
		var_remove_regex extraconfopt ' ' '--.*'
		eval cmake .. $confopt $extraconfopt
	fi
}
hook_add preconf 3 "kde_cmake"
