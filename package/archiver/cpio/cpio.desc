[ $prefix = usr ] && bindir=/bin
var_append CC_WRAPPER_APPEND ' ' -std=gnu17
var_append SYSCC_WRAPPER_APPEND ' ' -std=gnu17
pkginstalled tar && var_append confopt ' ' --with-rmt=/usr/libexec/rmt
hook_add preconf 5 "sed -i -e '/gets is a/d' gnu/stdio.in.h"
