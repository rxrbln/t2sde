main_begin

    block_begin(start, `Starting ntpd')
	if [ "$(pidof D_prefix/bin/ntpd)" ]
	then
		echo "ntp daemon already running. ntp start aborted"
IN		error=1
	else
		check(`D_prefix/bin/ntpd -g -q -c /etc/ntp.conf')
		check(`D_prefix/bin/ntpd -c /etc/ntp.conf')
	fi
    block_end

    block_begin(stop, `Stopping ntpd')
	check(`killall -15 D_prefix/bin/ntpd')
    block_end

main_end
