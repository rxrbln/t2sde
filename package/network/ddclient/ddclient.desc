runmake=0

ddclient_install() {
	cp -v ddclient $root$sbindir/
	cp -v sample-etc_ddclient.conf $root$sysconfdir/ddclient.conf
	cp -v sample-* $root$docdir
}
hook_add postmake 5 ddclient_install
