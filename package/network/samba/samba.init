# Desc: SMB (Server Message Block) protocol daemon
# Runlevel: 40 rcX
#

main_begin

    block_begin(start, `Starting SAMBA server')
	if [ ! -f D_sysconfdir/smb.conf ]; then
		echo "No smb.conf!"
		error=1
	else
        	check(`D_prefix/sbin/smbd -D')
        	check(`D_prefix/sbin/nmbd -D')
	fi
    block_end

    block_begin(stop, `Stopping SAMBA server')
       check(`killall D_prefix/sbin/nmbd')
       check(`killall D_prefix/sbin/smbd')
    block_end

main_end
