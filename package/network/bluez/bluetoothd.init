# Desc: bluetooth daemon
# Runlevel: 85 rcX
#

main_begin

    block_begin(start, `Starting bluetooth')
		check(`D_prefix/libexec/bluetooth/bluetoothd')
		check(`D_prefix/bin/bluetoothctl power on')
    block_end

    block_begin(stop, `Stopping bluetooth')
	check(`D_prefix/libexec/bin/bluetoothctl power off')
	check(`killall -15 D_prefix/libexec/bluetooth/bluetoothd')
    block_end

    block_begin(restart, `Restarting bluetooth')
	check(`killall -1 D_prefix/libexec/bluetooth/bluetoothd')
    block_end

main_end
