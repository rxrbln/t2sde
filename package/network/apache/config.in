if pkgcheck apache X
then
 	menu_begin MENU_PKG_APACHE 'Apache Package Options'
	text 'Install prefix for apache packages' \
	     ROCKCFG_PKG_APACHE_PREFIX "opt/apache"

	pkgout
	list="" ; default=""
	while read pkg ver ; do
		if [ "$pkg" = "bdb42" ] ; then
			default="$pkg"
		elif [ "$default" = "" ] ; then
			default="$pkg"
		fi
		list="$list $pkg Use_${pkg}_($ver)_as_standard_DB"
	done < <(grep  "^X .* bdb[0-9 ]*" config/$config/packages | \
	         cut -f5,6 -d' ' | sort)

	if [ "$list" ] ; then
		choice ROCKCFG_PKG_APACHE_BDB $default $list
	fi

	bool "DSO support (mod_so)"				ROCKCFG_PKG_APACHE_MOD_SO		1
	bool "Anonymous user access (mod_auth_anon)"		ROCKCFG_PKG_APACHE_MOD_AUTH_ANON	0
	bool "DBM authentication support (mod_auth_dbm)"	ROCKCFG_PKG_APACHE_MOD_AUTH_DBM		0 
       	bool "Digest authentication support (mod_auth_digest)"  ROCKCFG_PKG_APACHE_MOD_AUTH_DIGEST      0	
	bool "LDAP authentication support (mod_auth_ldap)"	ROCKCFG_PKG_APACHE_MOD_AUTH_LDAP	0
	bool "SSL/TLS support (mod_ssl)"			ROCKCFG_PKG_APACHE_MOD_SSL		1
	bool "WebDAV support (mod_dav)"				ROCKCFG_PKG_APACHE_MOD_DAV		1
	bool "Dynamic file caching support (mod_cache)"		ROCKCFG_PKG_APACHE_MOD_CACHE		1	
	bool "Disk caching support (mod_disk_cache)"		ROCKCFG_PKG_APACHE_MOD_DISK_CACHE	1
	bool "Proxy support (mod_proxy)"			ROCKCFG_PKG_APACHE_MOD_PROXY 		1
	bool "URL rewrite  support (mod_rewrite)"		ROCKCFG_PKG_APACHE_MOD_REWRITE		1 
        bool "Compression support (mod_deflate)"       		ROCKCFG_PKG_APACHE_MOD_DEFLATE		1 
	bool "Server information support (mod_info)"		ROCKCFG_PKG_APACHE_MOD_INFO		0 
	bool "URL spelling correction support (mod_spelling)"	ROCKCFG_PKG_APACHE_MOD_SPELLING		1

	menu_end
fi

