nginx_load_modules() {
	mkdir -pv $root$sysconfdir/$pkg/modules
	for x in $root$localstatedir/lib/$pkg/modules/*; do
		local module=${x##*/}
		echo "load_module \"modules/${x##*/}\";" > $root$sysconfdir/$pkg/modules/${module%%.so}.conf
	done
}
hook_add postinstall 5 nginx_load_modules
