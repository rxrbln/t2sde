if [ $SDECFG_ARCH = x86 -o $SDECFG_ARCH = x86-64 -o $SDECFG_ARCH = ia64 ] &&
   pkgcheck icc X
then
    menu_begin MENU_PKG_ICC 'Intel C/C++ Compiler Options'
    bool 'Activate support for Intel C/C++ Compiler (icc)' \
					SDECFG_PKG_ICC_ENABLE 0
    if [ $SDECFG_PKG_ICC_ENABLE = 1 ]; then
	pkgenable icc
	comment '---   Please get a license from:'
	comment '---   http://www.intel.com/software/products/compilers/clin/'
	text 'Serial Number' SDECFG_PKG_ICC_SERIAL_NUMBER ''
    fi
    menu_end
fi
