if [ $ROCKCFG_ARCH = x86 -o ROCKCFG_ARCH = ia64 ] && pkgcheck icc X
then
    menu_begin MENU_PKG_ICC 'Intel C/C++ Compiler Options'
    bool 'Activate support for Intel C/C++ Compiler (icc)' \
					ROCKCFG_PKG_ICC_ENABLE 0
    if [ $ROCKCFG_PKG_ICC_ENABLE = 1 ] ; then
	pkgenable icc
	comment '---   Please get the following files from'
	comment '---   http://www.intel.com/software/products/compilers/c60l/'
	text 'Absolute filename of package file (a *.tar file)' \
		ROCKCFG_PKG_ICC_FILE_PACKAGE '/root/icc_60.tar'
	text 'Absolute filename of licence file (a *.lic file)' \
		ROCKCFG_PKG_ICC_FILE_LICENSE '/root/icc_60.lic'
    fi
    menu_end
fi

