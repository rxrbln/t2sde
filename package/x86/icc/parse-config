for x in CC CXX KCC ; do
	if eval '[ "$ROCKCFG_DEFAULT_'$x'" = "icc" ]' ; then
		if
			[ -x "`type -p icc`" ]
		then
			eval 'export '$x'="icc"'
			for x in $base/package/base/icc/pkg_${pkg}{,_*}.patch
			do
				if [ -f $x ] ; then
					var_remove patchfiles " " $x
					var_append patchfiles " " $x
				fi
			done
		fi
	fi
done

var_insert ICC_WRAPPER_REMOVE " " "-O -O[01] -m*"
var_insert ICC_WRAPPER_INSERT " " "-O2"

if [ -f architecture/$arch/icc-options ] ; then
	. architecture/$arch/icc-options
fi

