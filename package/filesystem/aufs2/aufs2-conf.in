if xpatch="`match_source_file aufs2-20 aufs2`"; then
	echo_status "Including aufs2 patch"
	hook_add prepatch 5 "rm -rf /tmp/aufs2-*; tar -C /tmp -v --wildcards --use-compress-program=bzip2 -xf $base/download/mirror/a/$xpatch"
	hook_add prepatch 6 "aufs_fix_and_inject_patch $xpatch"

	# removed on postinstall
	hook_add postinstall 5 "rm -rf /tmp/${xpatch%.tbz2*}/"

	aufs_fix_and_inject_patch() {
		local patchfile=$( echo /tmp/aufs2-*/aufs2-{base,standalone}.patch )
		var_append patchfiles ' ' "$patchfile"
	}
fi
