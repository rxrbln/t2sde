if pkgcheck boehm-gc X
then
	comment '--- Boehm-Demers-Weiser conservative garbage collector'

	while read x y; do
		bool "Use it in Objective-C (gcc-$y)" ROCKCFG_PKG_BOEHMGC_OBJC${x#gcc} 0
		#bool "Use it in libjava (gcc-$y)" ROCKCFG_PKG_BOEHMGC_JAVA${x#gcc} 0
		comment ' '
	done < <( grep '^X .* gcc.* ' config/$config/packages | cut -d' ' -f 5,6 )

fi
