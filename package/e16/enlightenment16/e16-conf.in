if [ "$prefix_auto" = 1 ] ; then
	prefix=opt/e16
	set_confopt
fi

# imlib is in gnome17
pkgprefix -t glib12
pkgprefix -t gtk+12

[ ! -f "$( pkgprefix libdir glib12 )/libglib.so" ] \
        && abort "gnome14 libs (imlib) not found!"

export CFLAGS="-I$includedir -I$( pkgprefix includedir glib12 ) $CFLAGS"

export GTK_CONFIG=$( pkgprefix bindir gtk+12 )/gtk-config
export E16=$root/$prefix
