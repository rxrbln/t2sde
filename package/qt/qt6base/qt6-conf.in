if [ $prefix_auto = 1 ]; then
	[ $pkg = qt6base ] &&
		prefix=${SDECFG_PKG_QT6_PREFIX:-opt/qt6} || prefix=$(pkgprefix qt6base)
	set_confopt
fi

atstage cross && var_append cmakeopt ' ' "-DCMAKE_SYSROOT=$root -DQT_HOST_PATH=/opt/qt6"
