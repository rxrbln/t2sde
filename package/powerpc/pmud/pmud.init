#!/bin/sh
#
# ROCK Linux: /etc/rc.d/init.d/mpud
#
# Desc: PowerPC Power Management Unit daemon
# Runlevel: 80 rcX rc2 rc3
#

main_begin

    block_begin(start, `Starting pmud.')
        check(`/sbin/pmud')
    block_end

    block_begin(stop, `Stopping pmud.')
        check(`killall -15 pmud')
    block_end

main_end

