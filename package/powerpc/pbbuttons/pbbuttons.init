#!/bin/sh
#
# ROCK Linux: /etc/rc.d/init.d/pbbuttons
#
# Desc: laptop special feature deamon
# Runlevel: 70 rcX
#

main_begin

    block_begin(start, `Starting pbbuttons.')
        check(`D_prefix/bin/pbbuttons -d')
    block_end

    block_begin(stop, `Stopping pbbuttons.')
        check(`killall -15 pbbuttons')
    block_end

main_end

