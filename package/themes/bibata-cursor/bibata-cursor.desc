runmake=0
install_bibata_theme() {
	for theme in `match_source_file -p Bibata`; do
		tar $taropt $theme
	done
	mkdir -p $root$(pkgprefix datadir libx11)/icons/
	cp -vrf Bibata* $root$(pkgprefix datadir libx11)/icons/
}
hook_add postmake 5 install_bibata_theme
