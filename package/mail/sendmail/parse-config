install_setmailer() {
	sed "s,@mailer@,$1,g" > /usr/sbin/setmailer_$1 \
		< $base/package/*/sendmail/setmailer.sh
	chmod +x /usr/sbin/setmailer_$1

	if [ "$ROCKCFG_DEFAULT_MTA" = "$1" ] ; then
		/usr/sbin/setmailer_$1
	fi
}

