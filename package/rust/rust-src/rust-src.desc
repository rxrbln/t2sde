autoextract=0
runcargo=0
runmake=0

rust_src_install() {
	local dir="$(rustc --print sysroot)/lib"
	mkdir -p $dir
	tar -xf $(match_source_file -p rust) --strip-components=3 -C $dir \
		"rust-src-$(rustc --version | cut -d' ' -f2)/rust-src/lib/"
}
hook_add postmake 5 rust_src_install
