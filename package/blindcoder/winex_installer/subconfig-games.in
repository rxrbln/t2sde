menu_begin MENU_PKG_WINEX_INSTALLER "WineX Installer"
	bool "Install WineX" ROCKCFG_PKG_WINEX_INSTALLER_INST 0
	[ $ROCKCFG_PKG_WINEX_INSTALLER_INST == 0 ] && pkgdisable winex_installer
	[ $ROCKCFG_PKG_WINEX_INSTALLER_INST == 1 ] && pkgenable winex_installer
	if pkgcheck winex_installer X ; then
		block_begin 4
		text "Path to winex3_3.1-1.i386.tgz" ROCKCFG_PKG_WINEX_INSTALLER_WINTAR "/root/winex3_3.1-1.i386.tgz"
		text "Path to point2play-1.1.tgz" ROCKCFG_PKG_WINEX_INSTALLER_P2PTAR "/root/point2play-1.1.tgz"
		block_end
		if [ -e $ROCKCFG_PKG_WINEX_INSTALLER_WINTAR ] ; then
			mkdir -p download/blindcoder/winex_installer
			cp $ROCKCFG_PKG_WINEX_INSTALLER_WINTAR download/blindcoder/winex_installer/winex.tar.gz
		fi
		if [ -e $ROCKCFG_PKG_WINEX_INSTALLER_P2PTAR ] ; then
			mkdir -p download/blindcoder/winex_installer
			cp $ROCKCFG_PKG_WINEX_INSTALLER_P2PTAR download/blindcoder/winex_installer/point2play.tar.gz
		fi
	fi
menu_end
