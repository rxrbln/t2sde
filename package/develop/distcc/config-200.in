if pkgcheck distcc X
then
	bool 'Distribute compile jobs (distcc) wherever possible' \
		     ROCKCFG_PKG_DISTCC_USEIT 0
	if [ "$ROCKCFG_PKG_DISTCC_USEIT" == "1" ]; then
	block_begin 3
		bool 'Use hosts /etc/resolve.conf for name resolving' \
		     ROCKCFG_PKG_DISTCC_HOST_RESOLV 1
		text 'Remote hosts (nodes) to be used' \
		     ROCKCFG_PKG_DISTCC_HOSTS "localhost"
	block_end 3
	fi
fi

