if ! atstage toolchain; then
  case $pkg in
    compiler-rt) ;;
    libcxx*) ;;
    *) var_append CXX_WRAPPER_INSERT ' ' "-stdlib=libc++ -c?:-lc++abi -c?:-lunwind" ;;
  esac

  for x in CC CXX KCC; do
	if eval '[ "$SDECFG_DEFAULT_'$x'" = "clang" ]'; then
		case "$x" in
			CC)	atstage cross &&
				  var_append GCC_WRAPPER_INSERT ' ' "--target=$arch_target --sysroot $root"
				var_append GCC_WRAPPER_INSERT ' ' "-c?:-rtlib=compiler-rt"
				[ "$SDECFG_OPT" = "size" ] && var_append GCC_WRAPPER_APPEND ' ' "-Oz"
				z="${archprefix}clang" ;;
			CXX)	z="${archprefix}clang++" ;;
			KCC)	z="${archprefix}clang"
				if [ "$SDECFG_OPT" = "size" ]; then
				    var_insert KCC_WRAPPER_REMOVE " " "-O -O[0-9]"
				    var_insert KCC_WRAPPER_INSERT " " "-Os"
				fi
				;;
			*)	z="clang_$X_NOT_YET_IMPLEMENTED" ;;
		esac
		for y in $z; do
			[ "`type -p $y`" ] && export $x=$y
		done
	fi
  done
fi
