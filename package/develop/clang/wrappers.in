build_wrapper CC GCC ${arch_target}-clang
build_wrapper CXX GCC ${arch_target}-clang++

if atstage native || [ "$SDECFG_USE_CROSSCC" = 0 ] ; then
	build_wrapper CC,GCC clang
	build_wrapper CXX,GCC clang++
	build_wrapper CPP,CPP cpp
else
        # system compiler used in stage 0 - mostly for ccache
        build_wrapper SYSCC  SYSGCC clang
        build_wrapper SYSCXX SYSGCC clang++
