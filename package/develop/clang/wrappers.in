build_wrapper CC,GCC,CLANG ${arch_target}-clang
build_wrapper CXX,GCC,CLANG ${arch_target}-clang++

if atstage native || [ "$SDECFG_USE_CROSSCC" = 0 ]; then
	build_wrapper CC,GCC,CLANG clang
	build_wrapper CXX,GCC,CLANG clang++
	build_wrapper CPP,CPP,CLANG cpp
else
	# system compiler used in stage 0 - mostly for ccache
	build_wrapper SYSCC,SYSGCC cc
	build_wrapper SYSCXX,SYSGCC c++
	#build_wrapper SYSCPP,SYSCPP cpp
fi
