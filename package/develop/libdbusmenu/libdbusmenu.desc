var_append confopt ' ' --with-gtk=3
var_append confopt ' ' --disable-dumper
var_append confopt ' ' --disable-tests
var_append confopt ' ' --disable-vala

fix_valgrind_in_configure() {
	# The AM_CONDITIONAL([HAVE_VALGRIND]) is inside the --disable-tests AS_IF
	# block, so when tests are disabled these variables are never initialized.
	# Pre-initialize them (valgrind=no) so configure doesn't abort.
	sed -i "2i have_valgrind=no" configure
	sed -i "2i HAVE_VALGRIND_TRUE=#" configure
	sed -i "2i HAVE_VALGRIND_FALSE=" configure
}
hook_add preconf 3 fix_valgrind_in_configure
