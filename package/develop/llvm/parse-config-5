for x in CC CXX KCC ; do
	if eval '[ "$SDECFG_DEFAULT_'$x'" = "llvm" ]' ; then
		case "$x" in
			CC)	z="clang" ;;
			CXX)	z="clang++" ;;
			KXX)	z="clang" ;;
			*)	z="clang_$X_NOT_YET_IMPLEMENTED" ;;
                esac
                for y in $z ; do
                        [ "`type -p $y`" ] && export $x=$y
		done
	fi
done
