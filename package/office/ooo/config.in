
menu_begin MENU_PKG_OOO 'OpenOffice.org (Ximian build features)'
	choice ROCKCFG_PKG_OOO_DISTRO T2 T2 'T2 patchset' Debian "Debian patchset" Ark "Ark patchset"
	choice ROCKCFG_PKG_OOO_WIDGETS none none 'OOO widgets' gnome 'GTK native widgets' kde 'KDE native widgets'

	if [ "$ROCKCFG_PKG_OOO_WIDGETS" = "gnome" ]; then
		bool 'Enable bonobo bindings' ROCKCFG_PKG_OOO_BONOBO 0
	fi

	menu_begin MENU_PKG_OOO_ICONS 'Select (additional) icon sets.'
		bool 'Bluecurve' ROCKCFG_PKG_OOO_ICONS_BLUECURVE 1
		bool 'KDE' ROCKCFG_PKG_OOO_ICONS_BLUECURVE 1
		bool 'Gnome' ROCKCFG_PKG_OOO_ICONS_BLUECURVE 1
	menu_end

	# docdir
menu_end
