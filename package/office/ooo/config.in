if pkgcheck ooo X; then
	menu_begin MENU_PKG_OOO 'OpenOffice.org (Ximian build features)'

		# Widgets
		#
		CFGTEMP_PKG_OOO_WIDGETS_LIST="none OOO_widgets"
		pkgcheck gtk+ X && var_append CFGTEMP_PKG_OOO_WIDGETS_LIST ' ' \
			"gnome GTK_native_widgets"
		pkgcheck arts X && var_append CFGTEMP_PKG_OOO_WIDGETS_LIST ' ' \
			"kde KDE_native_widgets"
	
		choice ROCKCFG_PKG_OOO_WIDGETS none $CFGTEMP_PKG_OOO_WIDGETS_LIST

	#	if [ "$ROCKCFG_PKG_OOO_WIDGETS" = "gnome" ]; then
	#		bool 'Enable bonobo bindings' ROCKCFG_PKG_OOO_BONOBO 0
	#	fi

		# Icons
		#
		if pkgcheck '(gtk+|arts)' X; then
			comment 'Select (additional) icon sets.'
#FIXME: download location		bool 'Bluecurve' ROCKCFG_PKG_OOO_ICONS_BLUECURVE 1
			pkgcheck gtk+ X &&	bool 'Gnome' ROCKCFG_PKG_OOO_ICONS_GNOME 1
			pkgcheck arts X &&	bool 'KDE' ROCKCFG_PKG_OOO_ICONS_KDE 1
		fi

		# TODO: docdir
	menu_end
fi
