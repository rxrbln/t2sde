#!/bin/sh
if pkgcheck ooo X; then
menu_begin MENU_PKG_OOO 'OpenOffice.org (Ximian build features)'
	choice ROCKCFG_PKG_OOO_WIDGETS none	\
		none	'OOO widgets'		\
		gnome	'GTK native widgets'	\
		kde	'KDE native widgets'

	if [ "$ROCKCFG_PKG_OOO_WIDGETS" = "gnome" ]; then
		bool 'Enable bonobo bindings' ROCKCFG_PKG_OOO_BONOBO 0
	fi

	menu_begin MENU_PKG_OOO_ICONS 'Select (additional) icon sets.'
#FIXME: download location		bool 'Bluecurve' ROCKCFG_PKG_OOO_ICONS_BLUECURVE 1
		bool 'KDE' ROCKCFG_PKG_OOO_ICONS_KDE 1
		bool 'Gnome' ROCKCFG_PKG_OOO_ICONS_GNOME 1
	menu_end

	# docdir
menu_end
fi
