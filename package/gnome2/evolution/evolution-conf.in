# Enable SSL support depending on firefox/seamonkey
if pkginstalled firefox; then
	sid=firefox-$(pkgprefix ver firefox)
	sinc=$(pkgprefix includedir firefox)
	slib=$(pkgprefix libdir firefox)
elif pkginstalled seamonkey; then
	sid=seamonkey-$(pkgprefix ver seamonkey)
	sinc=$(pkgprefix includedir seamonkey)
	slib=$(pkgprefix libdir seamonkey)
fi
if [ -n $sid ]; then
	var_append confopt ' ' '--enable-nss=yes'
	var_append confopt ' ' '--enable-smime=yes'
	var_append confopt ' ' "--with-nss-includes=$sinc/$sid/nss"
	var_append confopt ' ' "--with-nss-libs=$slib/$sid"
	var_append confopt ' ' "--with-nspr-includes=$sinc/$sid/nspr"
	var_append confopt ' ' "--with-nspr-libs=$slib/$sid"
fi

# Enable LDAP support in evolution
if pkginstalled openldap; then
	pkgprefix -t openldap
	var_append confopt ' ' "--with-openldap=$root/$( pkgprefix openldap )"
#   --with-static-ldap=no/yes          Link LDAP support statically into evolution
fi

if pkginstalled evolution-exchange; then
	var_append confopt ' ' '--enable-exchange'
fi
	
