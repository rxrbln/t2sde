[D] 75f4f4f94163031c5569f5b0252ae6f472c33ca041b2427fac09db8a docker-compose-v2.40.3.tar.gz https://github.com/docker/compose/archive/v2.40.3/

. $base/package/*/*/go-conf.in
rungo=
makeinstopt=

hook_add postmake 5 'docker-compose-pm'
docker-compose-pm() {
	install -m 755 bin/build/docker-compose $root$bindir
	ln -sf $root$bindir/docker-compose $root$libexecdir/docker/cli-plugins/compose
}
