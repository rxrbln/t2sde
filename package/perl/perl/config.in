then
	menu_begin MENU_PKG_PERL5 'Perl 5 Package Options'
		text 'Host name' ROCKCFG_PKG_PERL5_HOST_NAME "localhost"
		text 'Site prefix' ROCKCFG_PKG_PERL5_SITE_PREFIX "usr"
		text 'Vendor prefix' ROCKCFG_PKG_PERL5_VENDOR_PREFIX "opt"
		bool 'Create suid binary' ROCKCFG_PKG_PERL5_SUIDPERL 1
		bool 'Use threads' ROCKCFG_PKG_PERL5_THREADS 0
		if pkgcheck bdb33 X; then
		bool 'Force usage of BerkleyDB 3.3 (Compatibility)' ROCKCFG_PKG_PERL5_USE_DB3 1
		fi
	menu_end
fi

