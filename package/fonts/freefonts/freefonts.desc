ff_inst() {
	cd $root/usr/X11/lib/X11/fonts/
	echo "Installing freefonts in usr/X11/lib/X11/fonts .."
	tar --no-same-owner $taropt `match_source_file -p freefonts`
}

autoextract=0
runmake=0
hook_add inmake	5 ff_inst
