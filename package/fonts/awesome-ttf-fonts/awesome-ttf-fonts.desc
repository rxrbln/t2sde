runmake=0

aw_inst() {
	mkdir -p $root/usr/X11/lib/X11/fonts/{TTF,OTF}
	cp -fv webfonts/*.ttf $root/usr/X11/lib/X11/fonts/TTF/
	cp -fv otfs/*.otf $root/usr/X11/lib/X11/fonts/OTF/
}
hook_add postmake 5 aw_inst
