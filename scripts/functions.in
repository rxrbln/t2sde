# bz2filename [<filename>]
# outputs filename converted to .bz2. stdin and $1 inputs are accepted
#
bz2filename() {
	local pattern='-e s,\.\(t\?\)\(gz\|Z\)$,.\1bz2,'
	pattern="-e s,\.gpg$,, $pattern"
	pattern="-e s,\.tar$,\.tar.bz2, $pattern"

	if [ -n "$1" ]; then
		echo "$1" | sed $pattern
	else
		sed $pattern
	fi
}

# Hook variables
