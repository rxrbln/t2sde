exec 2>&1

options=''
config=default
deps=fast
debug=0
verbose=1
ignore_chksum=1
update=1
dryrun=0
force=0
rebuild=1
repositories=""
system=0

#
# ----  Functions
#

. scripts/functions

help_msg() {
	spacer="                 "
	echo
	echo "Usage: Emerge-Pkg [ -cfg <config> ] [ -dry-run ] [ -force ] [ -noupdate ]"
	echo "$spacer [ -consider-chksum ] [ -norebuild ]"
	echo "$spacer [ -deps=none|fast|indirect ]"
	echo "$spacer [ -repository repository-name ] [ -system ] [ pkg-name(s) ]"
	echo
	echo "pkg-name(s) are only optional if a repository is specified."
	echo
}

#
# ---- Parse options + config
#

if [ $# = 0 ]; then
	help_msg
	exit 1
fi

while [ "$1" ] ; do
	case "$1" in
		-cfg)     options="$options $1 $2" ; config="$2" ; shift ;;
		-deps=*)  deps=${1/-deps=/} ;;
		-dry-run) dryrun=1 ;;
		-force)	  force=1 ;;
		-noupdate) update=0 ;;
		-consider-chksum) ignore_chksum=0 ;;
		-norebuild) rebuild=0 ;;
		-repository) repositories="$repositories $2"
		             deps=none ; shift ;;
		-system) system=1 ; deps=none ;;
		-*) help_msg ; exit 1 ;;
		*)  break ;;
	esac
	shift
done

. ./scripts/parse-config
. ./scripts/functions

check4update()
{
  addlist=""
  for package in $deplist ; do
	[ $verbose = 1 ] && echo -n "checking $package ..."
	confdir=""
        for x in package/*/$package/$package.desc ; do
            if [ -f "$x" ] ; then
		if [ -z "$confdir" ] ; then
		  confdir=${x/$package.desc/}
		else
		  confdir=X
		fi
            fi
        done

        if [ -z "$confdir" ] ; then
                [ $verbose = 1 ] &&
		  echo -n " No such package."
        elif [ "$confdir" = X ] ; then
                [ $verbose = 1 ] &&
		  echo -n " Error: Package in multiple trees!"
        elif [ ! -f /var/adm/packages/$package ] ; then
                [ $verbose = 1 ] &&
		  echo -n " Not installed. Added."
		var_append addlist " " "$package"
        else
                o_ver=$(grep '^Package Name and Version' \
                                /var/adm/packages/$package | cut -f6 -d' ')
                n_ver=$(grep '^\[V\] ' $confdir/$package.desc | cut -f2 -d' ')
                if [ "$o_ver" != "$n_ver" -a "$n_ver" != "0000" ] ; then
                        [ $verbose = 1 ] &&
			  echo -n " New version ($o_ver -> $n_ver). Added."
			var_append addlist " " "$package"
                else
                        o_ck=$(grep '^\(ROCK Linux\|T2\) Package Source Checksum' \
                                /var/adm/packages/$package | sed 's,.*: ,,')
                        n_ck=$( pkgchksum package/*/$package )
                        if [ $ignore_chksum = 0 -a "$o_ck" != "$n_ck" ] ; then
                                [ $verbose = 1 ] &&
				  echo -n " New source checksum. Added."
				var_append addlist " " "$package"
			else
				if [ -f /var/adm/cache/$package ] &&
				   grep -q '\[BUILDTIME\] .* ERROR' \
				        /var/adm/cache/$package
				then
				    [ $verbose = 1 ] &&
				      echo -n " Former build was broken."

				    if [ $rebuild = 1 ] ; then

					[ $verbose = 1 ] && echo -n " Added."
					var_append " " "$package"
				    else
					[ $verbose = 1 ] && echo -n " Skipped."
				    fi
				else
				  [ $debug = 1 ] &&
				    echo -n " Installed and up-to-date."
				fi
                        fi
                fi
        fi
	echo
  done
  deplist="$addlist"
}

indirect_dep4pkg() {
    gawk -v package=$1 '
function check_package() {

	found_new = 0;

	for ( package in build_list ) {
		if ( verbose )
			print "#DEBUG PACKAGE: " package;

		if ( ! package in database ) {
			if (verbose)
				print "#  " package " not in database";
		}
		else {
			if (verbose)
				print "#  " package " in database";

			split(database[package], a);

			for (d in a) {
				# if ( a[c] == package  ) continue;
				if ( strtonum(d) <= 3 ) continue;
				dep = a[d];
				if ( verbose && 0)
					print "#    dep: " dep;
				if ( dep in build_list ) {
					if ( verbose && 0)
					print "#    dep: " dep " already parsed";
				}
				else {
					if (verbose)
						print "#    dep: " dep " now added";
					build_list [ dep ] = (package);
					found_new = 1;
				}
			}
		}
	}
	if (found_new)
		check_package();
}

BEGIN {
	config="'$config'"; verbose='$verbose';
	depdb_file = "scripts/dep_db.txt";

	while ( (getline depline < depdb_file) > 0 )
		{ $0 = depline; sub(/:/, "", $1); database[$1]=$0; }
	close(depdb_file);

	build_list [ package ] = 1;

	check_package();

	if (verbose) {
		for ( bp in build_list ) {
			print "# " bp " (" build_list[bp] ")"
		}
	}
	for ( bp in build_list ) {
		print bp
	}
}

'
}

fast_dep4pkg()
{
	grep '\[DEP\]' package/*/$1/$1.cache | cut -d ' ' -f 2
}

# the remaining arguments are packages to be built
var_append deplist " " "$@"

# packages from repositories
for x in $repositories ; do
	deplist="$deplist ` egrep "^X .* $x .*" config/$config/packages |
	         cut -d ' ' -f 5`"
done

# all packages if a system update
[ $system -eq 1 ] &&
	deplist=`grep "^X" config/$config/packages | cut -d ' ' -f 5`

case $deps in 
  indirect|fast)
        # we have to create a complete dependency graph ...
	tmp=`mktemp`
	for x in $deplist ; do
        	${deps}_dep4pkg $x >> $tmp
	done
	[ $verbose = 1 ] && grep '^#' $tmp

	var_append deplist " " "`grep -v '^#' $tmp`"

	# sort by priority
	deplist=`echo -n $deplist | tr '\n' ' ' | tr -s ' '`
	deplist=`grep "^X .* .* .* \\(${deplist// /\\|}\\) " \
	         config/$config/packages | sort -k 3 | cut -d ' ' -f 5`
	rm $tmp
	;;
  none)
	;;
  *)
	echo "Unknown dependency resolution mode. Valid are none, fast and indirect."
	exit 1
esac

# only build packages that need an update
[ $force -eq 0 ] && check4update

echo "Packages scheduled to build: ${deplist:-none}"

[ $dryrun = 1 ] && exit

# the deplist is quite unsorted (in alphabetically sorted chunks)
# so we need to work arround this here ...

[ $update = 1 ] && options="$options -update"

for package in $deplist ; do
	if ./scripts/Download $package ; then
		./scripts/Build-Pkg $options $package
	else
		echo "The download for package $package failed!"
		exit -1
	fi
done

