# --- T2-COPYRIGHT-NOTE-END ---

eval "`grep -A 10 '\[BEGIN\]' scripts/parse-config | grep -B 10 '\[END\]'`"

echo -n 'Creating source tar ... '

# Create temp source base dir
#
src="`mktemp -d -p $PWD src.srctar.XXXXXXXXXX`"
rm -rf $src/t2-src-$rockver
mkdir -p $src/t2-src-$rockver
#
for x in scripts target misc package architecture Documentation
do
	ln -s ../../$x $src/t2-src-$rockver/$x
done

# Create tar file
#
cd $src
tar --use-compress-program=bzip2 --owner root --group root \
    --exclude .svn --exclude CVS -cf ${1:-t2-src-$rockver.tar.bz2} t2-src-$rockver/*/*

# Done.
#
cd $base
rm -rf $src/
du -sh ${1:-t2-src-$rockver.tar.bz2} | tr '\t' ' '

