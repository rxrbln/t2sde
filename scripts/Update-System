config=default

while [ "$1" ] ; do
        case "$1" in
            -cfg)
                config=$2 ; shift ; shift ;;
	    -ignore-chksum)
		options="$options -ignore-chksum" ; shift ;;
            *)
                echo "Usage: $0 [ -cfg config ] [ -ignore-chksum ] " ; exit 1 ;;
        esac
done

. scripts/parse-config

./scripts/Create-UpdList -cfg $config $options | cut -f1 -d: | \
while read package ; do
	if [ ${package} = glibc ] ; then
		echo
		echo "Not rebuilding package ${package} automatically since"
		echo "it is way to important and a broken build can do much"
		echo "harm to the system."
	elif [ -f /var/adm/logs/9-${package}.err ] ; then
		echo
		echo "Found /var/adm/logs/9-${package}.err. Not building"
		echo "package ${package} - please remove this file first."
	else
		./scripts/Build-Pkg -cfg $config -update $package
	fi
done

echo

