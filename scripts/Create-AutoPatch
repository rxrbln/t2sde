command="$1" ; shift
temp="`mktemp`"

if [ -z "$1" ] ; then
	echo
	echo "Usage: $0 {command} {file1} [ {file2} [ .. ] ]"
	echo
	echo "Example: ./scripts/Create-AutoPatch \\"
	echo "         'sed s,clifford@clifford.at,clifford@rocklinux.org,' \\"
	echo "         package/{base,x11}/*/*.desc"
	echo
fi

for fn ; do
	eval "$command" < $fn > $temp
	diff -u ./$fn $temp
done

rm -f $temp

