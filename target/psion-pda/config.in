pkgfilter sed '

# mangle all packages to only build them in the cross stage (1)
s,^. \(.\)[^ ]*,X \11--------,;

# select some packages (and repositories) explicitely

/ 00-dirtree /		{ p; d; };
/ linux-header /	{ p; d; };
/ binutils /		{ s,^. [^ ]*,X 0---------,; p; d; }
/ gcc /			{ s,^. [^ ]*,X 0---------,; p; d; }
/ squashfs-tools /	{ s,^. [^ ]*,X 0---------,; p; d; }

/ uclibc /		{ p; d; };
/ linux24-psionw /	{ p; d; };

/ libowfat /		{ p; d; };
/ minit /		{ p; d; };
/ fgetty /		{ p; d; };

/ busybox /		{ p; d; };

/ zlib /		{ p; d; };

/ ncurses /		{ p; d; };

/ irda-utils /		{ p; d; };

# / iptables /		{ p; d; };
/ dropbear /		{ p; d; };
/ rsync /		{ p; d; };

/ gpm /			{ p; d; };

/ libpng /		{ p; d; };
/ links /		{ p; d; };

# disable the rest
/.*/			{ s/^X /O / ; p; d; };'

