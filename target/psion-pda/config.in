/ uclibc /		{ p; d; };
/ linux24-psionw /	{ p; d; };

/ libowfat /		{ p; d; };
/ minit /		{ p; d; };
/ fgetty /		{ p; d; };
/ pdksh /		{ p; d; };
/ bash /		{ p; d; };

/ busybox /		{ p; d; };

/ zlib /		{ p; d; };

/ ncurses /		{ p; d; };

/ irda-utils /		{ p; d; };

