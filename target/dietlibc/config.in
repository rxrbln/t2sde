block_begin 0
	bool 'Build only dietlibc proved packages' \
					ROCKCFG_TRG_DIETLIBC_PRONLY 1
	if [ $ROCKCFG_TRG_DIETLIBC_PRONLY = 1 ] ; then
		pkgfilter grep ' DIETLIBC '
	fi

	bool 'Link binaries dynamically with dietlibc' \
					ROCKCFG_TRG_DIETLIBC_DYN 0

	ROCKCFGSET_DIETLIBC_DYN=$ROCKCFG_TRG_DIETLIBC_DYN

	ROCKCFGSET_FLIST=find
	ROCKCFGSET_DIETLIBC=1
	ROCKCFGSET_DIETLIBC_ALL=1
	ROCKCFGSET_DISABLE_NLS=1
block_end

