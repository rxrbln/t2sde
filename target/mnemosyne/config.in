. ./target/mnemosyne/mnemosyne.in

bool 'Copy cache files of mnemoc`s optional packages' ROCKCFG_TRG_MNEMOSYNE_COPYCACHE 0
block_end

ROCKCFGSET_INIT=runit

# mnemosyne is linux26-only now
ROCKCFGSET_PKG_LINUX_USE25MODTOOLS=1
ROCKCFGSET_PKG_PERL5_THREADS=1

block_begin 5
	CFGTEMP_TRG_MNEMOSYNE_PKGLST=""
	trg_mnemosyne_features "./target/$ROCKCFG_TARGET/pkgsel" MNEMOSYNE
block_end

if [ "$CFGTEMP_TRG_MNEMOSYNE_PKGLST" ]; then
	trg_mnemosyne_filter $CFGTEMP_TRG_MNEMOSYNE_PKGLST \
		> ./config/$config/pkgsel.mnemosyne.awk
	pkgfilter awk -f ./config/$config/pkgsel.mnemosyne.awk
fi

block_begin 7
