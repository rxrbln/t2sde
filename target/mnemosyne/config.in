. ./target/mnemosyne/mnemosyne.in

if [ ! -s $cfgtmpdir/config.$ROCKCFG_TARGET.in ]; then
	rm -f $cfgtmpdir/{config.rules}.$ROCKCFG_TARGET.in

	tgt_mnemosyne_render "./target/$ROCKCFG_TARGET/pkgsel"	\
		"./target/$ROCKCFG_TARGET/pkgsel" MNEMOSYNE	\
		$cfgtmpdir/config.$ROCKCFG_TARGET.in		\
		$cfgtmpdir/rules.$ROCKCFG_TARGET.in

fi

bool 'Copy cache files of mnemoc`s optional packages' ROCKCFG_TRG_MNEMOSYNE_COPYCACHE 0
block_end

CFGTEMP_TRG_MNEMOSYNE_PKGLST=""

block_begin 5
	if [ -s $cfgtmpdir/config.$ROCKCFG_TARGET.in ]; then
		. $cfgtmpdir/rules.$ROCKCFG_TARGET.in
		. $cfgtmpdir/config.$ROCKCFG_TARGET.in
	else
		comment ' '
		comment 'ERROR: plugins config was not rendered!'
	fi
block_end

if [ "$CFGTEMP_TRG_MNEMOSYNE_PKGLST" ]; then
	trg_mnemosyne_filter $CFGTEMP_TRG_MNEMOSYNE_PKGLST \
		> $cfgtmpdir/pkgsel.mnemosyne.awk
