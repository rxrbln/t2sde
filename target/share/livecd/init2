#!/bin/sh

echo "T2 live setup (C) Rene Rebe - ExactCODE"

mkdir -p /tmp ; chmod 1777 /tmp

echo "Setting up overlay mounts ..."

dirs='/mnt/live=ro'
for x in /media/cdrom/live-*.squash; do
        [ -e $x ] || continue
        x=${x##*/}; x=${x%.squash}
        mkdir -p /mnt/$x
        mount -nt auto -o loop /media/cdrom/$x.squash /mnt/$x
        dirs="/mnt/$x=ro:$dirs"
done

mkdir -p /mnt/overlay
mount -nt tmpfs none /mnt/overlay
dirs="/mnt/overlay:$dirs"

mount -nt unionfs -o dirs=$dirs none /mnt/live

echo "Finalizing setup ..."
cat /proc/mounts > /etc/mtab

find /tmp/lib -type f -name '*.ko' | while read f; do
	f=${f#/tmp}
	[ -e $f ] || mv -f /tmp/$f $f
done
rm -rf /tmp/lib /init{,2}

init="init= `cat /proc/cmdline`" ; init=${init##*init=} ; init=${init%% *}
# TODO: later on search other places if we want 100% backward compat.
[ "$init" ] || init=/sbin/init
if [ -f $init ]; then
	exec $init $*
fi

echo "No init found, giving up. Debug shell:"
exec sh --login
