
# T2 Live CD Grub configuration "header" - the actual images are appended
# automatically

timeout 8
default 0
fallback 1

foreground  = FFFFFF
background  = 666666
splashimage (cd)/boot/t2.xpm.gz

title  T2 Live Linux
kernel (cd)/boot/$kernel ro
initrd (cd)/boot/initramfs.gz

title  T2 Live Linux - no X
kernel (cd)/boot/$kernel ro 2
initrd (cd)/boot/initramfs.gz

title  Installed OS from HD
root (hd0)
chainloader +1

