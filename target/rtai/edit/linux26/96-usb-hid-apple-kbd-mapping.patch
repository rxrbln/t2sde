+				unsigned char code = hid_keyboard[usage->hid & HID_USAGE];
+				if (!code) goto ignore;
+
+				/* Apple? */
+				if (input->id.vendor == 0x5ac) {
+					/* alt->altgr, lmeta->alt, and no dups
+					   due Linux meta bit parsing */
+					switch (code) {
+					  case 56: code = 100; break;
+					  case 125: code = 56; break;
